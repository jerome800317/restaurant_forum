<div class="container">
  <div class="row">
    <div class="form-inline">

      <div class="form-group">
        <%= image_tag @user.avatar %>
      </div>

      <div class="form-group">
        <h1><%= @user.name %></h1>
        <h2><%= @user.email %></h2>
        <p><%= @user.intro %></p>       
        <%= link_to "Edit Profile", edit_user_path, class: "btn btn-primary" if current_user.id == @user.id %>      
      </div>
      <hr>
      <div>
        <% @commented_restaurants.uniq.each do |restaurant| %>
          <div><%= link_to restaurant.name, restaurant_path(restaurant) %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>