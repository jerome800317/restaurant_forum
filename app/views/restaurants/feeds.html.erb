<div class="container">
  <div class="row">

    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to "首頁", root_path %>
      </li>
      <li role="presentation" class="active"><%= link_to "最新動態", feeds_restaurants_path %>
      </li>
    </ul>
  </div>

  <div class="row">
    <h1>餐廳最新動態</h1>
    <div class="col-md-6">
      <div class="panel panel-default">
        <h3 class="panel-heading">最新餐廳</h3>
        <div class="panel-body">
          <% @recent_restaurants.each do |restaurant| %>
            <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
            <p class="label label-default"><%= restaurant.category.name %></p>
            <p><%= truncate(restaurant.description, length: 80) %></p>
            <hr>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <h3 class="panel-heading">最新評論</h3>
        <div class="panel-body">
          <% @recent_comments.each do |comment| %>
            <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
            <p><%= truncate(comment.restaurant.description, length: 80) %></p>
            <p>by <%= link_to comment.user.name, user_path(comment.user) %></p>
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>